<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.TimetableMapper">
	<insert id="insert" parameterType="timetable">
		insert into timetable
		values(#{userId}, #{mon},
		#{tue}, #{wed}, #{thu},
		#{fri},
		#{scheduleType})
	</insert>

	<select id="select" resultMap="selectTimetablemap"
		parameterType="string">
		select user_id, mon, tue, wed, thu, fri,
		schedule_type
		from timetable where user_id = #{userId}
	</select>
	
	<select id="selectTimetableList" resultMap="selectTimetablemap"
		parameterType="String">
		select user_id, mon, tue, wed, thu, fri,
		schedule_type
		from timetable where user_id = #{userId}
	</select>
	
	<delete id="delete" parameterType="int">
		delete from timetable where
		user_id=#{userId}
	</delete>
	
	<resultMap type="Timetable" id="selectTimetablemap">
		<id column="user_id" property="userId" />
		<result column="mon" property="mon" />
		<result column="tue" property="tue" />
		<result column="wed" property="wed" />
		<result column="thu" property="thu" />
		<result column="fri" property="fri" />
		<result column="schedule_type" property="scheduleType" />
	</resultMap>
</mapper>